<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jenniemartin.dota2ref.ItemActivity">

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:minHeight="100dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:contentDescription="@string/item_contentdesc"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/nameLabelTextView"
                android:text="@string/name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/costLabelTextView"
                android:text="@string/cost_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/costTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textStyle="normal|italic"
                android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/shopLabel"
                    android:text="@string/bFrom_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/shopNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bonusTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:textStyle="normal"
                    android:text="@string/itembonus_label"/>

                <TextView
                    android:id="@+id/bonusContentTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    android:textStyle="normal|italic" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bigScrollView"
    android:layout_below="@+id/linearLayout0"
    android:layout_above="@+id/itemNextButton"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <TextView
            android:id="@+id/descriptionLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/description_label"
            android:layout_weight=".5"/>

        <TextView
            android:id="@+id/abilityLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/itemability_label"
            android:layout_weight=".5"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">



        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textStyle="normal|italic"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/abilityTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textStyle="normal|italic"
            android:layout_margin="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:text="@string/disassemble_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemDissRadioButton"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false" />

        <RadioButton
            android:text="@string/alertallies_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemAlliesRadioButton"
            android:layout_weight="1"
            android:clickable="false"
            android:textIsSelectable="false"
            android:focusable="false" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/questionButton"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/q_mark"
            android:contentDescription="@string/question_contentdesc"
            />

        </LinearLayout>
</LinearLayout>
</ScrollView>

    <Button

        android:id="@+id/itemPreviousButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/pitem_label"
        android:layout_width="125dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src = "@drawable/menu_icon"
        android:id = "@+id/menuButton"
        android:contentDescription="@string/menu_content_desc"/>

    <Button

        android:id="@+id/itemNextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="125dp"
        android:text="@string/nitem_label"
        android:layout_height="wrap_content"/>

</RelativeLayout>
